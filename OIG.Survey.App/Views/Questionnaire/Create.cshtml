@model CreateQuestionnaireModel

<h3 class="display-6">Create</h3>

<form method="post" asp-action="Create" class="mt-3">
    <div class="modal-body">
        <div class="mb-3">
            <label for="Name" class="form-label">Questionnaire Name</label>
            <input type="text" class="form-control" id="Name" aria-describedby="Name" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="StartDate" class="form-label">Start Date</label>
            <input type="datetime-local" class="form-control" id="StartDate" aria-describedby="StartDate" asp-for="StartDate">
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="EndDate" class="form-label">End Date</label>
            <input type="datetime-local" class="form-control" id="EndDate" aria-describedby="EndDate" asp-for="EndDate">
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button asp-controller="Questionnaire" asp-action="Index" formmethod="get" type="submit" class="btn btn-light">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section scripts
{
    <script type="text/javascript">
    </script>
}