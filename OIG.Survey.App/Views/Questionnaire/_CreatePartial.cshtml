@model CreateQuestionnaireModel

<button id="btnAddQuestionnaire"
        type="button"
        class="btn btn-primary mt-3 mb-3 oig-btn-action"
        data-bs-toggle="modal"
        data-bs-target="#AddQuestionnaireModal">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
      <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
      <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
    </svg>
</button>

<div class="modal fade" id="AddQuestionnaireModal" tabindex="-1" aria-labelledby="AddQuestionnaireModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddQuestionnaireModalLabel">New Questionnaire</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="Create" class="mt-3">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Questionnaire Name</label>
                        <input type="text" class="form-control" id="Name" aria-describedby="Name" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="StartDate" class="form-label">Start Date</label>
                        <input type="datetime-local" class="form-control" id="StartDate" aria-describedby="StartDate" asp-for="StartDate">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="EndDate" class="form-label">End Date</label>
                        <input type="datetime-local" class="form-control" id="EndDate" aria-describedby="EndDate" asp-for="EndDate">
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        // function onSubmit(){
